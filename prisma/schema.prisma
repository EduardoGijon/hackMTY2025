generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String @id @default(cuid())
  email        String @unique
  name         String
  businessName String
  businessType String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  transactions Transaction[]
}

model Transaction {
  id          String @id @default(cuid())
  userId      String
  type        String // 'income' or 'expense'
  category    String
  amount      Float
  description String
  date        DateTime
  createdAt   DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id])
}